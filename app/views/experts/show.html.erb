<%= render "shared/navigations" %>

<div class="row">
  <div class="col-sm-2">
    <%= image_tag(@expert.expert_profile_picture_url.presence || "/assets/avatar.jpg", { style: "max-width: 150px;", class: "media-object img-cirle" })%>
  </div>
  <div class="col-sm-8">
    <h2><%= @expert.expert_name %></h2>
    <h3><%= @expert.expert_service %></h3>
    <div class="row">
      <div class="counter-info col-sm-4">
        <h4><%= @expert.expert_rating %> RATING</h4>
        <div class="counter-body"><%= @expert.expert_review_count %> REVIEWS</div>
      </div>
      <div class="counter-info col-sm-4">
        <h4><%= @expert.expert_reading_count %></h4>
        <div class="counter-body">READINGS</div>
      </div>
      <div class="counter-info col-sm-4">
        <h4><%= @expert.created_at.year %></h4>
        <div class="counter-body">ADVISOR SINCE</div>
      </div>
    </div>
  </div>
  <div class="col-sm-2">
    <div class="btn btn-sm btn-danger btn-block btn-arrow arrow-left expert-rate">
        10 minutes for $1.99
     </div>
     <h5>$<%= @expert.expert_rate_per_minute %>/min</h5>
     <a class="btn btn-success btn-block">
       <i class="fa fa-phone"></i>
       <%= @expert.expert_call_enabled ? 'CALL NOW' : 'CALL LATER' %>
     </a>
     <a class="btn btn-default btn-block">
       <i class="fa fa-comment"></i>
       <%= @expert.expert_chat_enabled ? 'CHAT NOW' : 'CHAT LATER' %>
     </a>
  </div>
</div>
<br/>
<hr/>
<div class="row">
  <div class="col-sm-4">
    <h4>Specialities</h4>
    <%= @expert.expert_specialities %>
  </div>
  <div class="col-sm-4">
    <h4>Skill & Method</h4>
    <%= @expert.expert_skills_and_methods %>
  </div>
  <div class="col-sm-4">
    <h4>Languages</h4>
    <%= @expert.expert_languages %>
  </div>
</div>
<br/>
<hr/>
<div class="row">
  <div class="col-sm-12">
    <h4>Introduction</h4>
    <p class="text-justify"><%= @expert.expert_introduction %></p>
  </div>
</div>
<br/>
<div class="row">
  <div class="col-sm-12">
    <%= link_to "Back", experts_path, class: "pull-right" %>
  </div>
</div>
