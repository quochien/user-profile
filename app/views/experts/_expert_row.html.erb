<div class="row">
  <div class="col-sm-2">
    <%= image_tag(expert.expert_profile_picture_url, { style: "max-width: 150px;" }) if expert.expert_profile_picture_url %>
  </div>
  <div class="col-sm-6">
    <h2><%= link_to expert.expert_name, expert_path(expert) %></h2>
    <h3><%= expert.expert_service %></h3>
    <div><%= expert.expert_introduction %></div>
  </div>
  <div class="col-sm-2">
    <h4>
      4.6 RATING
      <br/>
      1,260 REVIEWS
    </h4>
    <h4>
      9,360
      <br/>
      READINGS
    </h4>
    <h4>
      <%= expert.created_at.year %>
      <br/>
      ADVISOR SINCE
    </h4>
  </div>
  <div class="col-sm-2">
    <div class="expert-rate">
      10 minutes for $1.99
      <br/>
      $<%= expert.expert_rate_per_minute %>/min
    </div>
    <br/>
    <div>
      <%= expert.expert_call_enabled ? 'CALL NOW' : 'CALL LATER' %>
    </div>
    <br/>
    <div>
      <%= expert.expert_chat_enabled ? 'CHAT NOW' : 'CHAT LATER' %>
    </div>
  </div>
  <hr/>
</div>
