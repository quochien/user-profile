<%= render "shared/navigations" %>
<%= render "devise/shared/tabs" %>

<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="password">
    <h2>Change your password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password", class: "col-sm-2 col-xs-3" %>
          <div class="col-sm-6 col-xs-8">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
            <i>(leave blank if you don't want to change it)</i>
            <% if @minimum_password_length %>
              <p class="help-block">(<%= @minimum_password_length %> characters minimum)</p>
            <% end %>
          </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password", class: "col-sm-2 col-xs-3" %>
        <div class="col-sm-6 col-xs-8">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-xs-offset-3 col-sm-10 col-xs-9">
          <%= f.submit "Change my password", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="links">
  <%= render "devise/shared/links" %>
</div>
