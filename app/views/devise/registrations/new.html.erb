<div class="row">
  <div class="signup col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>

      <h2>Sign Up</h2>
      <hr/>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-3 col-xs-3" %>
        <div class="col-sm-9 col-xs-9">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :name, class: "col-sm-3 col-xs-3" %>
        <div class="col-sm-9 col-xs-9">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-sm-3 col-xs-3" %>
          <div class="col-sm-9 col-xs-9">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
            </div>
            <% if @minimum_password_length %>
              <p class="help-block">(<%= @minimum_password_length %> characters minimum)</p>
            <% end %>
          </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-sm-3 col-xs-3" %>
        <div class="col-sm-9 col-xs-9">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-xs-offset-3 col-sm-9 col-xs-9">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="links">
  <%= render "devise/shared/links" %>
</div>
