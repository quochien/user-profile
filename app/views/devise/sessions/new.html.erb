<div class="row">
  <div class="signup col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>

      <h2>Sign In</h2>
      <hr/>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 col-xs-3" %>
        <div class="col-sm-10 col-xs-9">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-sm-2 col-xs-3" %>
          <div class="col-sm-10 col-xs-9">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
            </div>
          </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-sm-offset-2 col-xs-offset-3 col-sm-10 col-xs-9">
            <%= f.check_box :remember_me%>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-offset-2 col-xs-offset-3 col-sm-10 col-xs-9">
          <%= f.submit "Sign In", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="links">
  <%= render "devise/shared/links" %>
</div>
